<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".Fragment.frg_ttk">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textColor="#009688"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_person_24"
            app:startIconTint="#009688"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#009688"
            app:endIconMode="clear_text"
            app:endIconTint="#009688"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textColor="#009688"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_person_24"
            app:startIconTint="#009688"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#009688"
            app:endIconMode="clear_text"
            app:endIconTint="#009688"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtHoTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="@color/bar"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_lock_24"
            app:startIconTint="#009688"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#F88E4B"

            app:endIconMode="password_toggle"
            app:endIconTint="#009688"




            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMatKhau"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/black"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu"
            android:textColor="@color/bar"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:startIconDrawable="@drawable/baseline_lock_24"
            app:startIconTint="#009688"

            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#F88E4B"

            app:endIconMode="password_toggle"
            app:endIconTint="#009688"




            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNLMK"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/khungedt"
                android:textColor="@color/black"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnThem"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:text="Thêm"
                android:textSize="18dp"
                android:background="@drawable/khung_login"
                android:textColor="@color/bar"
                />
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:text="Hủy"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/khung_login"
                android:textColor="@color/bar"
                />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
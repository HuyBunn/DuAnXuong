<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="@drawable/khung_item"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtmasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã sản phẩm: 8"
            android:textStyle="bold"
            android:textColor="@color/bar"
            android:textSize="17dp"/>
        <TextView
        android:id="@+id/txttensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm: 8"
        android:textColor="@color/black"
        android:textSize="16dp" />
        <TextView
            android:id="@+id/txttenloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên loại: 8"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Giá: 8"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/txtsoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng: 8"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/txtmota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả: 8"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/btnxoa"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/xoa"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>